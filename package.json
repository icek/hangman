{
  "name": "hangman",
  "version": "1.0.0",
  "description": "Hangman game. Recrutation for n-educatio.pl",
  "keywords": [
    "hangman",
    "game",
    "n-educatio"
  ],
  "author": "Grzegorz Michlicki <grzegorz@michlicki.pl>",
  "license": "ISC",
  "main": "dist/hangman.js",
  "typings": "dist/hangman.d.ts",
  "typescript": {
    "main": "src/index.ts"
  },
  "scripts": {
    "build": "bnr build-client",
    "dev": "bnr watch-client"
  },
  "betterScripts": {
    "watch-client": {
      "command": "node ./webpack.dev.server.js",
      "env": {
        "PORT": 3000
      }
    },
    "build-client": {
      "command": "webpack --progress --verbose --colors --display-error-details",
      "env": {
        "NODE_ENV": "production"
      }
    }
  },
  "devDependencies": {
    "@types/es6-promise": "0.0.32",
    "@types/node": "^7.0.12",
    "@types/signals": "0.0.17",
    "autoprefixer": "^6.7.7",
    "babylonjs": "3.0.0-alpha",
    "better-npm-run": "0.0.15",
    "cannon": "^0.6.2",
    "clean-webpack-plugin": "^0.1.16",
    "css-loader": "^0.28.0",
    "css-mqpacker": "^5.0.1",
    "express": "^4.15.2",
    "extract-text-webpack-plugin": "^2.1.0",
    "file-loader": "^0.11.1",
    "html-webpack-plugin": "^2.28.0",
    "node-sass": "^4.5.2",
    "postcss-loader": "^1.3.3",
    "sass-loader": "^6.0.3",
    "signals": "^1.0.0",
    "style-loader": "^0.16.1",
    "ts-loader": "^2.0.3",
    "typescript": "^2.2.2",
    "webpack": "^2.3.3",
    "webpack-dev-middleware": "^1.10.1",
    "webpack-hot-middleware": "^2.18.0",
    "write-file-webpack-plugin": "^4.0.0"
  }
}
